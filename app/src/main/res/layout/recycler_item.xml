<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/recImage"
             android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ertiga"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recTitle"
            android:text="@string/driver_name"
            android:textColor="@color/Welspun"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/recImage"
            android:layout_marginTop="35dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/recPlant"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/recTitle"
            android:text="Plant"
            android:textColor="@color/Welspun"
            android:textSize="16sp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/recDesc"
            android:text="Car Name"
            android:textColor="@color/Welspun"
            android:textSize="8sp"
            android:layout_toEndOf="@+id/recImage"
            android:layout_below="@+id/recTitle"
            android:maxLines="0"
            android:layout_marginStart="20dp"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>