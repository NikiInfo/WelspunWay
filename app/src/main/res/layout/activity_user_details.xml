<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserDetails">


    <TextView
        android:layout_marginTop="200dp"
        android:id="@+id/tvEmpName"
        android:layout_width="194dp"
        android:layout_height="65dp"
        android:text="TextView"

        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.748" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/tvEmpId"
        android:layout_width="149dp"
        android:layout_height="44dp"
        android:text="TextView"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="399dp" />

    <TextView
        android:id="@+id/tvEmpDesignation"
        android:layout_width="133dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/tvEmpPlant"
        android:layout_width="97dp"
        android:layout_height="39dp"
        android:layout_marginBottom="52dp"
        android:text="TextView"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddUserDetails"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.919"
        tools:layout_editor_absoluteX="157dp" />

    <Button
        android:id="@+id/btnAddUserDetails"
        android:layout_width="231dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/Welspun"
        android:text="Add User Details"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />
</LinearLayout>